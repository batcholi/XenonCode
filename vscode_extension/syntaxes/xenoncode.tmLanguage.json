{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "XenonCode",
	"patterns": [
        {
            "name": "string.quoted.double.xenoncode",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.numeric.xenoncode",
                    "match": "\\{[^}]*\\}"
                }
            ]
        },
		{
			"match": "(?:(\\W|^))(function|storage|array|var|const|include|return|if|foreach|while|else|elseif|init|input|timer|tick|output|repeat|frequency|interval|break|continue|and|or|xor|:\\s*(text|number))(?=(\\W|$))",
			"name": "keyword.control.xenoncode"
		},
		{
			"match": "(\\d+\\.?\\d*)",
			"name": "constant.numeric.xenoncode"
		},
		{
			"match": "(//|;).*",
			"name": "comment.line.xenoncode"
		},
		{
			"match": "[-+/*=<>!&\\^%]+",
			"name": "keyword.operator.xenoncode"
		},
		{
			"match": "\\$[a-zA-Z_][\\w]*",
			"name": "variable.xenoncode"
		},
		{
			"match": "@[a-zA-Z_][\\w]*",
			"name": "keyword.xenoncode"
		}
	],
	"scopeName": "source.xenoncode"
}
